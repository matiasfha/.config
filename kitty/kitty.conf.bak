# vim:fileencoding=utf-8:foldmethod=marker
mouse_hide_wait 0
kitty_mod cmd+shift
#: {{{ KeyMaps
map kitty_mod+equal     change_font_size all +2.0
map kitty_mod+minus     change_font_size all -2.0
map kitty_mod+backspace change_font_size all 0
map alt+left send_text all \x1b\x62
map alt+right send_text all \x1b\x66\
map cmd+d launch --cwd=current --type=window
map kitty_mod+g launch --type overlay --cwd current lazygit
map kitty_mod+c close_window

map kitty_mod+down resize_window shorter 3
map kitty_mod+up resize_window taller 3
map ctrl+cmd+, load_config_file

# Maps to work with nvim
# map ctrl+j kitten pass_keys.py neighboring_window bottom ctrl+j
# map ctrl+k kitten pass_keys.py neighboring_window top    ctrl+k
# map ctrl+h kitten pass_keys.py neighboring_window left   ctrl+h
# map ctrl+l kitten pass_keys.py neighboring_window right  ctrl+l
map ctrl+j kitten pass_keys.py neighboring_window bottom ctrl+j "^.* - nvim$"
map ctrl+k kitten pass_keys.py neighboring_window top    ctrl+k "^.* - nvim$"
map ctrl+h kitten pass_keys.py neighboring_window left   ctrl+h "^.* - nvim$"
map ctrl+l kitten pass_keys.py neighboring_window right  ctrl+l "^.* - nvim$"

map kitty_mod+l next_tab
map kitty_mod+h previous_tab
map kitty_mod+s select_tab

# Zoom a tab
map kitty_mod+z toggle_layout stack
map kitty_mod+x last_used_layout
map ctrl+shift+l next_layout

# Copy
map cmd+c        copy_to_clipboard
map cmd+v        paste_from_clipboard
map shift+insert paste_from_clipboard
copy_on_select yes

# jump to beginning and end of word
map alt+left send_text all \x1b\x62
map alt+right send_text all \x1b\x66

# jump to beginning and end of line
map cmd+left send_text all \x01
map cmd+right send_text all \x05

# Map cmd + <num> to corresponding tabs
map cmd+1 goto_tab 1
map cmd+2 goto_tab 2
map cmd+3 goto_tab 3
map cmd+4 goto_tab 4
map cmd+5 goto_tab 5
map cmd+6 goto_tab 6
map cmd+7 goto_tab 7
map cmd+8 goto_tab 8
map cmd+9 goto_tab 9

mouse_map ctrl+left press ungrabbed,grabbed mouse_click_url

# Fuzzy find tabs
#
map ctrl+cmd+s kitten session_switcher.py

#}}}

allow_remote_control yes
listen_on unix:/tmp/mykitty
enable_audio_bell no

window_alert_on_bell yes
bell_on_tab "ðŸ”” "
visual_window_select_characters yes

# use stack layout

enabled_layouts *
# Custom startup session
# startup_session ./startup.conf

